{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "types": ["node", "puppeteer", "vitest/globals", "jest"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "scripts/**/*.js",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

