{
  "name": "@dzb-cv/pdf",
  "version": "1.1.0",
  "description": "Chrome-based PDF generation with multiple interfaces for DZB CV Generator",
  "private": true,
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/interfaces/cli-interface.d.ts",
      "import": "./dist/interfaces/cli-interface.js"
    },
    "./agent": {
      "types": "./dist/interfaces/agent-interface.d.ts",
      "import": "./dist/interfaces/agent-interface.js"
    },
    "./script": {
      "types": "./dist/interfaces/script-interface.d.ts",
      "import": "./dist/interfaces/script-interface.js"
    },
    "./pipeline": {
      "types": "./dist/interfaces/pipeline-interface.d.ts",
      "import": "./dist/interfaces/pipeline-interface.js"
    },
    "./core": {
      "types": "./dist/core/chrome-engine.d.ts",
      "import": "./dist/core/chrome-engine.js"
    },
    "./generators": {
      "types": "./dist/generators/index.d.ts",
      "import": "./dist/generators/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run || true",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist coverage tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@dzb-cv/types": "workspace:*",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@dzb-cv/config": "workspace:*",
    "@types/markdown-it": "^13.0.9"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "pdf",
    "cv",
    "resume",
    "generator",
    "chrome",
    "html-to-pdf",
    "cli-tools",
    "ai-agents",
    "automation"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}