{
  "app": {
    "templatesPath": "src/shared/templates",
    "outputPath": "generated",
    "defaultFormat": "pdf"
  },
  "pdf": {
    "pageConfig": {
      "size": "Letter",
      "margin": {
        "top": 1,
        "right": 1,
        "bottom": 1,
        "left": 1
      }
    }
  },
  "ai": {
    "openai": {
      "distillModel": "gpt-4o-mini",
      "optimizeModel": "gpt-4o-mini",
      "maxRetries": 3,
      "timeout": 30000,
      "apiKey": ""
    },
    "defaultStyle": "technical",
    "singlePageConstraints": {
      "maxLines": 45,
      "maxCharactersPerLine": 80,
      "pageFormat": "Letter",
      "margins": {
        "top": 0.5,
        "right": 0.5,
        "bottom": 0.5,
        "left": 0.5
      }
    },
    "enabled": true,
    "fallbackMode": "simulation"
  }
}