{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "uuid"]
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.js",
    "src/types/**/*.ts",
    "src/data/**/*.json",
    "src/templates/**/*.md",
    "src/components/**/*.md"
],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}