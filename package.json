{
  "name": "dzb-cv",
  "version": "1.0.0",
  "description": "Profile management system for Dawn",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && node tools/build-utils.js",
    "copy-assets": "node tools/build-utils.js",
    "test-generation": "node tools/test-generation.js",
    "validate": "node tools/validate-implementation.js",
    "verify": "node tools/verify-fixes.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "start": "node dist/cli.js",
    "analyze-job": "node dist/cli-job-analyzer.js",
    "import-cv": "node dist/cli-profile-importer.js import-markdown",
    "cv": "node dist/cli-unified.js"
  },
  "keywords": [
    "cv",
    "profile",
    "resume"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8",
    "inquirer": "^9.3.7",
    "jsdom": "^22.1.0",
    "markdown-it": "^14.1.0",
    "node-fetch": "^3.3.2",
    "pdf-lib": "^1.17.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.10.4",
    "@types/node-fetch": "^2.6.9",
    "@types/uuid": "^10.0.0",
    "diff": "^7.0.0",
    "jest": "^29.7.0",
    "puppeteer": "^22.15.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  }
