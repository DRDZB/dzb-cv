{
  "name": "dzb-cv",
  "version": "1.0.0",
  "description": "Profile management system for Dawn",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": "dist/cli/index.js",
  "volta": {
    "node": "20.10.0",
    "pnpm": "10.9.0"
  },
  "packageManager": "pnpm@10.9.0",
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=8.12.1"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "chmod +x dist/cli/index.js",
    "start": "node dist/cli/index.js",
    "dev": "tsx watch src/cli/index.ts",
    "dev:debug": "tsx --inspect-brk watch src/cli/index.ts",
    "cli": "tsx src/cli/index.ts",
    "test": "vitest run",
    "test:cli": "vitest run src/cli",
    "test:commands": "vitest run src/cli/commands",
    "test:tools": "vitest run src/tools",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts scripts/**/*.js",
    "lint:fix": "eslint src/**/*.ts scripts/**/*.js --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky install",
    "setup": "chmod +x setup.sh && ./setup.sh",
    "link-cli": "pnpm link --global"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jsdom": "^21.1.7",
    "@types/markdown-it": "^14.1.2",
    "@types/uuid": "^10.0.0",
    "chalk": "^5.3.0",
    "commander": "^13.1.0",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.7.0",
    "inquirer": "^12.6.0",
    "jsdom": "^26.1.0",
    "markdown-it": "^14.1.0",
    "marked": "^15.0.11",
    "marked-gfm-heading-id": "^4.1.1",
    "marked-highlight": "^2.0.1",
    "marked-mangle": "^1.1.0",
    "marked-smartypants": "^1.1.3",
    "node-fetch": "^3.3.2",
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.7.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.3.0",
    "@eslint/js": "^9.25.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.1.2",
    "@vitest/ui": "^3.1.2",
    "commitlint": "^19.3.0",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "ms": "^2.1.3",
    "pnpm": "10.9.0",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "scripts/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "types": "./dist/cli/index.d.ts",
  "directories": {
    "doc": "docs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
